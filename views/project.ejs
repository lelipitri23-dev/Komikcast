<!DOCTYPE html>
<html lang="id">
<head>
  <%- include('partials/head', {title: 'Project Update'}) %>
</head>
<body class="bg-[#141414] text-gray-200">
  <%- include('partials/navbar') %>

  <div class="container mx-auto px-4 py-8">
    <div class="mb-8 border-b border-[#333] pb-2">
      <h1 class="text-2xl font-bold text-white uppercase border-l-4 border-purple-500 pl-3">Project Manhwa Update</h1>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-5 gap-4">
      <% mangas.forEach(manga => { %>
        <div class="bg-[#1e1e1e] rounded overflow-hidden shadow-lg border border-[#2a2a2a]">
          <div class="relative aspect-[3/4]">
            <a href="/komik/<%= manga.slug %>">
              <img src="<%= manga.coverImage %>" class="w-full h-full object-cover">
              <div class="absolute top-2 left-0 bg-purple-600 text-white text-[10px] px-2 font-bold shadow">PROJECT</div>
            </a>
          </div>
          <div class="p-3">
            <h3 class="font-bold text-xs text-white truncate mb-1"><%= manga.title %></h3>
            <div class="text-[10px] text-gray-500 flex justify-between">
              <span><%= manga.chapters.length > 0 ? manga.chapters[0].title : 'New' %></span>
              <span class="text-gray-600">Updated</span>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
    <%- include('partials/footer') %>